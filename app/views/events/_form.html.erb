<%= simple_form_for(@event) do |f| %>
<%= f.error_notification %>
<%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Event title", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Event title", autofocus: true %>
    <%= f.input :location, label: "Event location", input_html: { class: "text" }, wrapper: false, label_html: {class: "label"}, placeholder: "Event location", autofocus: false %>
    <%= f.input :date, label: "Event date", input_html: { class: "date_field" }, wrapper: false, label_html: {class: "label"}, placeholder: "Event location", autofocus: false %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
